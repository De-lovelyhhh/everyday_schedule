<!--index.wxml-->

<view class='dayBar'>
    <view wx:for='{{dayList}}' wx:key='index' class="dayItem " >
        <view class="{{index===date?'background':''}}" bindtap="changeDay" data-index="{{index}}">{{item}}</view>
    </view>
</view>
<view class="page__bd page__bd_spacing" wx:if="{{schedule[date].length!==0}}">
        <view class="kind-list">
            <block  wx:for="{{schedule[date]}}" wx:key="index">
                <view class="kind-list__item">
                    <view  class="kind-list__item-hd detail">
                        <view class="weui-flex__item" style="font-size:larger">{{item.matter}}</view>
                        <view class='time'>{{item.beginTime}}-{{item.endTime}}</view>
                    </view>
                </view>
            </block>
        </view>
    </view>
    <view wx:else class="blank">哎呀怎么没有课啊</view>
